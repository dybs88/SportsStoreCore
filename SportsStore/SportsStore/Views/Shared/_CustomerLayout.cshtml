<!DOCTYPE html>
@{ 
    if(User.IsInRole(IdentityRoleNames.Admins))
    {
        Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link rel="stylesheet" asp-href-include="/bootstrap/css/*.min.css" />
    <link asp-href-include="/fontawesome/css/*.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/sportsstore/sportsstore.styles.css" type="text/css" />
</head>
<body>
    <div>
        <ul class="nav nav-tabs nav-fill mb-5">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index"
                   asp-controller="Customer"
                   asp-route-customerId="@ViewBag.CustomerId">Dane podstawowe</a>
            </li>
            <li class="nav-item">
            <a class="nav-link" asp-action="Addresses" 
               asp-controller="Customer"
               asp-route-customerId="@ViewBag.CustomerId">Adresy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="List"
                   asp-controller="Order"
                   asp-route-customerId="@ViewBag.CustomerId">Zamówienia</a>
            </li>
        </ul>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
