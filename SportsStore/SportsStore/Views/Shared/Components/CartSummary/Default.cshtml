@model SportsStore.Models.Cart.Cart

<div>
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Twój koszyk:</b>
            @Model.Items.Sum(i => i.Quantity) produkt(y)
            @Model.CartValue().ToString("c")
        </small>
    }
    
        <a class="btn btn-secondary mb-2" asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
            <i class="fa fa-shopping-cart"></i>
        </a>
</div>
