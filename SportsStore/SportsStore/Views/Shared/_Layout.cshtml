<!DOCTYPE html>
@{
    string navBrandColSize = "";
    string quickMenuColSize = "";
    if(User.Identity.IsAuthenticated)
    {
        navBrandColSize = "11";
        quickMenuColSize = "1";
    }
    else
    {
        navBrandColSize = quickMenuColSize = "6";

    }
 }

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link rel="stylesheet" asp-href-include="/bootstrap/css/*.min.css"/>
    <link asp-href-include="/fontawesome/css/*.css" rel="stylesheet"/>
</head>
<body>
<div class="navbar navbar-expand-lg">
        <a class="navbar-brand col-@navBrandColSize p-0 m-0" href="#">Sklep sportowy</a>
    <div class="col-@quickMenuColSize p-0 nav-item">
        @await Component.InvokeAsync("QuickMenu", new { returnUrl = Path })
    </div>
</div>
<div class="row m-1 p-1">
    <div id="categories" class="col-3">
        @await Component.InvokeAsync("NavigationMenu")
    </div>
    <div class="col-9">
        @RenderBody()
    </div>
</div>
</body>
</html>
