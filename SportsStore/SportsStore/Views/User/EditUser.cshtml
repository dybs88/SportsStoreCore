@model EditUserViewModel

@{
    ViewData["Title"] = "Edycja użytkownika";
}

<h2>Edytuj użytkownika</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<div class="row mb-1">
    <div class="col">
        <a class="btn btn-primary" asp-action="ResetPassword" asp-controller="User">Resetuj hasło</a>
    </div>
</div>
<form asp-action="EditUser" method="post">
    <div class="form-group">
        <label asp-for="User.UserName">Nazwa użytkownika</label>
        <input class="form-control" type="text" asp-for="User.UserName" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email">E-mail</label>
        <input class="form-control" type="text" asp-for="User.Email" />
    </div>
    <div class="form-group">
        <label asp-for="User.FirstName">Imię</label>
        <input class="form-control" type="text" asp-for="User.FirstName" />
    </div>
    <div class="form-group">
        <label asp-for="User.LastName">Nazwisko</label>
        <input class="form-control" type="text" asp-for="User.LastName" />
    </div>
    <div>
        Nadawanie ról
        @await Component.InvokeAsync("IdentityRolesTable", new { user = Model.User })
    </div>
    <button class="btn btn-success" type="submit">Zapisz</button>
    <a class="btn btn-secondary" asp-action="List" asp-controller="User">Anuluj</a>
</form>

