@model EditUserViewModel

@{
    ViewData["Title"] = "Edycja użytkownika";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edytuj użytkownika</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form class="" asp-action="EditUser" method="post">
    <div class="form-group">
        <label asp-for="User.UserName">Nazwa użytkownika</label>
        <input class="form-control" type="text" asp-for="User.UserName" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email">E-mail</label>
        <input class="form-control" type="text" asp-for="User.Email" />
    </div>
    <div>
        Nadawanie ról
        @await  Component.InvokeAsync("IdentityRolesTable", new { user = Model.User })
    </div>
    <button class="btn btn-success" type="submit">Zapisz</button>
    <a class="btn btn-secondary" asp-action="List" asp-controller="User">Anuluj</a>
</form>

