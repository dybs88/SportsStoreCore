@model CreateUserViewModel
@{
    ViewBag.Title = "Nowy użytkownik";
    if(User.IsInRole("Administracja"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<form asp-action="CreateUser" method="post">
    <input type="hidden" name="returnUrl" asp-for="ReturnUrl" />
    <input type="hidden" asp-for="IsAuthenticated" value="@User.Identity.IsAuthenticated" />
    <div class="form-group">
        <label asp-for="User.UserName">Nazwa użytkownika</label>
        <div><span asp-validation-for="User.UserName" class="text-danger"></span></div>
        <input class="form-control" type="text" asp-for="User.UserName" />
    </div>
    <div class="form-group">
        <label asp-for="User.FirstName">Imię</label>
        <div><span asp-validation-for="User.FirstName" class="text-danger"></span></div>
        <input class="form-control" type="text" asp-for="User.FirstName" />
    </div>
    <div class="form-group">
        <label asp-for="User.LastName">Nazwisko</label>
        <div><span asp-validation-for="User.LastName" class="text-danger"></span></div>
        <input class="form-control" type="text" asp-for="User.LastName" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email">Adres email</label>
        <div><span asp-validation-for="User.Email" class="text-danger"></span></div>
        <input class="form-control" type="text" asp-for="User.Email" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        <input id="passwordText" class="form-control" type="password" asp-for="Password" />
    </div>
    <div class="form-group">
        <label asp-for="RepeatedPassword"></label>
        <div><span id="repeatedPasswordValidation" asp-validation-for="RepeatedPassword" class="text-danger"></span></div>
        <input id="repeatedPasswordText" class="form-control" type="password" asp-for="RepeatedPassword" />
    </div>
    @if (Model.IsAuthenticated)
    {
        <h4>Dostępne role</h4>
        @await Component.InvokeAsync("IdentityRolesTable", new { user = Model.User })
    }
    <input type="submit" class="btn btn-success" value="Zapisz" />
    <a asp-action="List" asp-controller="User" class="btn btn-secondary">Anuluj</a>
</form>


