@model Customer

@{
    ViewData["Title"] = "Klient";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="form-group">
    <label class="form-control" asp-for="FirstName">Imię: @Model.FirstName</label>
</div>
<div class="form-group">
    <label class="form-control" asp-for="LastName">Nazwisko: @Model.LastName</label>
</div>
<div class="form-group">
    <label class="form-control" asp-for="PhoneNumber">Nr telefonu: @Model.PhoneNumber</label>
</div>
<div class="form-group">
    <label class="form-control" asp-for="Email">Adres e-mail: @Model.Email</label>
</div>
<a class="btn btn-success"
   asp-action="Edit"
   asp-controller="Customer"
   asp-route-customerId="@Model.CustomerId">
    Edytuj dane
</a>


