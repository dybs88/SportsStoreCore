@model ProductListViewModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var product in Model.Products)
{
    @Html.Partial("ProductSummary",product)
}
<div page-model="@Model.PageHelper" page-action="List" page-url-category ="@Model.CurrentCategory" page-class="btn ml-1" 
     page-class-normal="btn-secondary" page-class-selected="btn-primary" class="btn-group float-right m-1">
</div>

