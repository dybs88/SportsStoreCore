@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    ViewBag.Title = "Wszystkie produkty";
}

        <table class="table table-striped table-bordered table-sm">
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th colspan="3">Opis</th>
                <th>Cena netto</th>
                <th>Cena brutto</th>
                <th>Kategoria</th>
                <th>Akcje</th>
            </tr>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.Name</td>
                    <td colspan="3">@product.Description</td>
                    <td>@product.NetPrice</td>
                    <td>@product.GrossPrice</td>
                    <td>@product.Category</td>
                    <td>
                        <form asp-action="DeleteProduct" method="post">
                            <a asp-action="EditProduct" class="btn btn-primary" asp-route-productId="@product.ProductID">Edytuj</a>
                            <input type="hidden" name="productId" value="@product.ProductID" />
                            <button type="submit" class="btn btn-danger">Usuń</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        <a asp-action="CreateProduct" class="btn btn-success">Dodaj nowy</a>

