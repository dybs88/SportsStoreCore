@model Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edycja produktu " + Model.ProductID;
}
<form asp-action="EditProduct" method="post" class="m-5">
    <h4>ID: @Model.ProductID</h4>
    <input type="hidden" asp-for="ProductID"/>
    <div class="form-group">
        <label asp-for="Name">Nazwa</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <input type="text" asp-for="Description" class="form-control" />
    </div>  
    <div class="form-group">
        <label asp-for="Category">Kategoria</label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input type="text" asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Cena</label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Products" class="btn btn-secondary">Anuluj</a>
</form>


