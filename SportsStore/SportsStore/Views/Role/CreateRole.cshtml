@model CreateRoleViewModel
@{
    ViewData["Title"] = "Dodanie roli";
}

<h2>Nowa rola</h2>
<form asp-action="CreateRole" method="post">
    <div class="form-group">
        <label asp-for="Role.Name">Nazwa</label>
        <div><span asp-validation-for="Role.Name" class="text-danger"></span></div>
        <input class="form-control" type="text" asp-for="Role.Name" />
    </div>
    <h4>Uprawnienia:</h4>
    @await Component.InvokeAsync("PermissionTable", new { role = Model.Role })
    <button class="btn btn-success" type="submit" asp-action="CreateRole">Zapisz</button>
    <a class="btn btn-secondary" asp-action="List" asp-controller="Role">Anuluj</a>
</form>

